{
  "singleQuote": true,
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 80,
  "parser": "typescript",
  "bracketSpacing": true,
  "arrowParens": "always",
  "quoteProps": "consistent",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.mts", "*.cts", "*.ts"],
      "options": {
        "parser": "typescript"
      }
    }
  ]
}
